<div class="container"> 
 <div class="row">
   
   <div class="col-md-3">
      
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, size: '100x100' , format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <td>name</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= @user.introduction %></td>
          </tr>
       </tbody>
      </table>

   <div class="row">
      <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
   </div>

      <h2 class="mt-3">New book</h2>
     
      <%= form_with model: @book, local:true do |f| %>
      
      <div class="form-group">
        <label for="book_title">Title</label></br>
        <%= f.text_field :title %>
      </div>
      
      <div class="form-group">
        <label for="book_opinion">Opinion</label></br>
        <%= f.text_area :body %>
      </div>
      
      <div class="form-group">
        </br>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
      
      <% end %>
    </div>

  <div class="col-md-8 offset-md-1">

    <h2>Books</h2>

    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
  
    <% @books.each do |book| %>
      <tbody>
        <tr>
            <td><%= link_to attachment_image_tag(book.user, :profile_image, size: '40x40' , format: 'jpeg', fallback: "no_image.jpg"), user_path(book.user) %></td>
            <td>
              <%= link_to book.title, book_path(book) %>
            </td>
            <td>
                <%= book.body %>
            </td>
        </tr>
      </tbody>
      <% end %>
    </table>
 
  </div>
  
  </div>
 </div>